<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ProfileActivity">

    <ImageView
        android:id="@+id/ivprofile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/signin"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="@id/txtheading"
        app:layout_constraintEnd_toEndOf="@id/txtheading"
        app:layout_constraintTop_toBottomOf="@id/txtheading"

        />

    <Button
        android:id="@+id/btEditProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:layout_marginVertical="15dp"
        app:layout_constraintTop_toBottomOf="@id/ivprofile"
        app:layout_constraintStart_toEndOf="@id/ivprofile"
    />
    <TextView
        android:id="@+id/txtheading"
        android:layout_width="match_parent"


        android:layout_height="wrap_content"
        android:text="User Information"
        android:textSize="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="36dp"
        android:gravity="center_horizontal"

        />
    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textSize="20dp"
        android:layout_margin="25dp"
        app:layout_constraintTop_toBottomOf="@id/btEditProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Email"
        android:layout_marginVertical="5dp"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@id/tvUsername"
        app:layout_constraintTop_toBottomOf="@id/tvUsername"
        />
    <TextView
        android:id="@+id/tvAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Address"
        android:layout_marginVertical="5dp"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@id/tvEmail"
        app:layout_constraintTop_toBottomOf="@id/tvEmail"
        />
    <TextView
        android:id="@+id/tvContact"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Contact"
        android:layout_marginVertical="5dp"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@id/tvAddress"
        app:layout_constraintTop_toBottomOf="@id/tvAddress"
        />
    <TextView
        android:id="@+id/tvGender"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Gender"
        android:layout_marginVertical="5dp"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@id/tvContact"
        app:layout_constraintTop_toBottomOf="@id/tvContact"
        />
    <TextView
        android:id="@+id/tvDob"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Date of Birth"
        android:layout_marginVertical="5dp"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@id/tvGender"
        app:layout_constraintTop_toBottomOf="@id/tvGender"
        />




</androidx.constraintlayout.widget.ConstraintLayout>